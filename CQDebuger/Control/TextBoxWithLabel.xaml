<UserControl x:Class="CQDebuger.Control.TextBoxWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CQDebuger.Control"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment ="Stretch" Orientation = "Vertical">
        <Label x:Name = "NameLabel" VerticalAlignment ="Stretch" Height="30" />
        <TextBox x:Name = "InputTextBox" VerticalAlignment ="Stretch" MinWidth ="200" Height="25"/>
    </StackPanel>

</UserControl>
